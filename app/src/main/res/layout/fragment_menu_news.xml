                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_seven"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
